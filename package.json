{
  "name": "capslock-qa-tests",
  "version": "1.0.0",
  "description": "Automated tests for test-qa.capslock.global",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test --grep @smoke",
    "test:validation": "playwright test --grep @validation",
    "test:a11y": "playwright test --grep @a11y",
    "test:percy": "percy exec -- playwright test --grep @percy",
    "test:staging": "TEST_ENV=staging playwright test",
    "test:prod": "TEST_ENV=production playwright test",
    "report": "playwright show-report",
    "report:allure": "allure serve allure-results",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "docker:build": "docker build -t capslock-tests .",
    "docker:test": "docker run --rm capslock-tests"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@percy/cli": "^1.31.6",
    "@percy/playwright": "^1.0.10",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "allure-commandline": "^2.30.0",
    "allure-playwright": "^3.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,less}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
